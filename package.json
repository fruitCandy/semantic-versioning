{
    "devDependencies": {
        "@commitlint/cli": "^6.2.0",
        "@commitlint/config-conventional": "^6.1.3",
        "@commitlint/config-lerna-scopes": "^6.1.3",
        "@commitlint/prompt-cli": "^6.1.3",
        "@commitlint/travis-cli": "^6.2.0",
        "commitizen": "^2.9.6",
        "husky": "^0.14.3",
        "lerna": "^2.6.0",
        "lerna-semantic-release": "^9.0.1",
        "alpha-cz": "^0.1.0"
    },
    "private": true,
    "name": "semantic-versioning",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "test": "scripts/test",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "semantic-release": "lerna publish --conventional-commits --yes",
        "lerna": "lerna publish --skip-npm --conventional-commits --changelog-preset eslint",
        "commit": "git cz",
        "bootstrap": "lerna bootstrap"
    },
    "workspaces": [
        "packages/*"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/alpha-cz"
        }
    }
}
