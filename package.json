{
    "devDependencies": {
        "@commitlint/cli": "^6.2.0",
        "@commitlint/config-conventional": "^6.1.3",
        "@commitlint/config-lerna-scopes": "^6.1.3",
        "@commitlint/prompt-cli": "^6.1.3",
        "@commitlint/travis-cli": "^6.2.0",
        "commitizen": "^2.9.6",
        "cz-customizable": "^5.2.0",
        "cz-lerna-changelog": "^1.2.1",
        "husky": "^0.14.3",
        "lerna": "^2.6.0",
        "lerna-semantic-release": "^9.0.1"
    },
    "private": true,
    "name": "semantic-versioning",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "test": "scripts/test",
        "semantic-release": "lerna publish -skip-npm --conventional-commits --yes && lerna-semantic-release post && lerna-semantic-release perform",
        "lerna": "lerna publish --skip-npm --conventional-commits",
        "cz": "git cz",
        "bootstrap": "lerna bootstrap"
    },
    "workspaces": [
        "packages/*"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        },
        "cz-customizable": {
            "config": "cz-customizable-config.js"
        }
    },

    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
